   color=bullColor,
   size=size.large,
   textcolor=textColor,
   editable=true)


// Hidden Bullish

// Osc: Lower Low
oscLL = drsi[lbR] < valuewhen(plFound, drsi[lbR], 1) and _inRange(plFound[1])

// Price: Higher Low
priceHL = low[lbR] > valuewhen(plFound, low[lbR], 1)

hiddenBullCond = plotHiddenBull and priceHL and oscLL and plFound

